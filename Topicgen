    }
    
    .hidden { 
      display: none; 
    }
    
    #generateBtn { 
      padding: 1rem 2rem; 
      border: none; 
      background: linear-gradient(45deg, #667eea, #764ba2);
      color: #fff; 
      cursor: pointer; 
      border-radius: 25px; 
      font-size: 1.1rem;
      font-weight: bold;
      display: block;
      margin: 0 auto 2rem;
      transition: transform 0.2s ease;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    #generateBtn:hover {
      transform: translateY(-2px);
    }
    
    .meta {
      display: flex;
      justify-content: space-between;
